package com.unrc.app;

import com.unrc.app.models.User;
import org.javalite.activejdbc.Model;

/**
 *
 * @author matias
 */
public class Usuario extends Model{
//metodos insertar,modificar,eliminar due√±o inmobiliaria    
	
	public static void insertar(String first_name,String last_name,String email){
		User user=new User();
		user.set("first_name",first_name);
		user.set("last_name",last_name);        
		user.set("email",email);
		user.saveIt();			
	}

	
	
	public static void modificar(String id,String element, String  change){
		User user=new User();
		user=User.findById(id);
		if (user!=null){
			user.set(element,change);
			user.saveIt();			

		}
		
	}
	
	public static void eliminar(String id){
		User user=new User();
		user=User.findById(id);
		if (user!=null){
			user.deleteCascade();
		}

	}
}	
	
